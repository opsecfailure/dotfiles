set selection-clipboard clipboard
set scroll-page-aware true
set font "GoMono Nerd Font Mono 14"

map r reload
map <C-p> print
map <C--> zoom out
map <C-=> zoom in

map D set "first-page-column 1:1"
map <C-d> set "first-page-column 1:2"

set default-bg                  "#ffffff"
set default-fg                  "#000000"

set statusbar-fg                "#ffffff"
set statusbar-bg                "#000000"

set inputbar-bg                 "#ffffff"
set inputbar-fg                 "#000000"

set notification-bg             "#fdf6e3"
set notification-fg             "#002b36"

set notification-error-bg       "#fdf6e3"
set notification-error-fg       "#dc322f"

set notification-warning-bg     "#fdf6e3"
set notification-warning-fg     "#dc322f"

set highlight-color             "#b58900"
set highlight-active-color      "#268bd2"

set completion-bg               "#ffffff"
set completion-fg               "#000000"

set completion-highlight-fg     "#ffffff"
set completion-highlight-bg     "#000000"

set recolor-lightcolor          "#ffffff"
set recolor-darkcolor           "#000000"

set recolor                     "false"
set recolor-keephue             "false"
